<%- include('../../partials/header.ejs') %>

<div class="container-fluid px-4 mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3>Hi <%= (user && (user.username || user.name)) ? (user.username || user.name) : 'Guest' %>, welcome to your recipes!</h3>
    <a href="/recipe/add" class="btn btn-success btn-sm"><i class="mdi mdi-plus"></i> Add Recipe</a>
  </div>

  <div class="row">
    <% if (recipes && recipes.length > 0) { %>
      <% recipes.forEach(recipe => { %>
        <div class="col-md-4 mb-4">
          <div class="card recipe-card shadow-sm" onclick="window.location.href='/recipe/<%= recipe._id %>'" style="cursor:pointer; border-radius:12px;">
            <% if (recipe.image) { %>
              <img src="<%= recipe.image %>" class="card-img-top" style="height:200px; object-fit:cover; border-top-left-radius:12px; border-top-right-radius:12px;">
            <% } else { %>
              <img src="/images/placeholder-food.jpg" class="card-img-top" style="height:200px; object-fit:cover; border-top-left-radius:12px; border-top-right-radius:12px;">
            <% } %>

            <div class="card-body">
              <h5 class="card-title fw-bold mb-2"><%= recipe.name %></h5>
              <p class="text-muted mb-1"><i class="mdi mdi-clock-outline"></i> <%= recipe.time %> mins</p>
              <% if (recipe.cuisine) { %>
                <span class="badge bg-primary me-1"><%= recipe.cuisine %></span>
              <% } %>
              <span class="badge bg-info">Difficulty: <%= recipe.difficulty %></span>
              <p class="text-truncate mt-2" style="max-height:50px;"><%= recipe.description %></p>
            </div>

            <div class="card-footer d-flex justify-content-between align-items-center bg-light">
              <small class="text-muted">By You!</small>
              <div>
                <a href="/recipe/<%= recipe._id %>" class="btn btn-outline-primary btn-sm me-1">View</a>
                <a href="/recipe/delete/<%= recipe._id %>" class="btn btn-outline-danger btn-sm">Delete</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center mt-5">
        <h5 class="text-muted">No recipes found yet.</h5>
        <a href="/recipe/add" class="btn btn-success mt-3">Add Your First Recipe</a>
      </div>
    <% } %>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>

<style>
  body {
    background-color: #f4f6f9;
  }
  .recipe-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .recipe-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }
  .card-title {
    font-size: 18px;
  }
  .badge {
    font-size: 12px;
  }
</style>
